html
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title 'Listado de Productos'
        
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" 
            rel="stylesheet")
        link(rel="stylesheet" href="/css/style.css" type="text/css")
        
        
        
    body(class="text-center")
        main(class="form-signin w-100 m-auto")
            h1(class="h3 mb-3 fw-normal text-center") Listado
            if productos.length !== 0
                table(class="table")
                    thead 
                        tr
                            th Nombre 
                            th Precio 
                            th Imagen 
                    tbody 
                        each producto in productos 
                            tr
                                td= producto.title
                                td= producto.price
                                td
                                    img(src= producto.thumbail style="width: 25px; height: 25px;")
                            
                    tfoot 
                        div 
                            a( href="/registro" class="btn btn-primary" role="button") Nuevo
            else
                div(class="alert alert-danger" role="alert") No Hay Productos
                div
                    a(href="/registro" class="btn btn-primary" role="button") Nuevo
                
                
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous")

    
