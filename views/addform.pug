html
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title 'Registro de Productos'
        
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" 
            rel="stylesheet")
        link(rel="stylesheet" href="/css/style.css" type="text/css")
        
        
        
    body(class="text-center")
        main(class="form-signin w-100 m-auto")
            form(action="/api/productos" method="POST")
                h1(class="h3 mb-3 fw-normal text-center") Nuevo Producto
                div(class="form-floating")
                    input(type="text" 
                        class="form-control" 
                        name="title" 
                        id="floatingInput" 
                        placeholder="ej: pinza " 
                        required)
                    label(for="floatingPrice") Nombre 
                div(class="form-floating")
                    input(type="number" 
                        class="form-control" 
                        name="price" 
                        id="floatingPrice" 
                        placeholder="ej: 200" 
                        required)
                    label(for="floatingPrice") Precio
                div(class="form-floating")
                    input(type="url" 
                        class="form-control" 
                        name="thumbail" 
                        id="floatingThumb" 
                        placeholder="ej: www.example.com" 
                        required)
                    label(for="floatingThumb") URL
                button(class="w-100 btn btn-lg btn-primary  mb-3" type="submit") Guardar
                a(href="/listado" class="w-100 btn btn-lg btn-success" role="button") Listado
                p(class="mt-5 mt-1 mb-3 text-muted text-center") &copy; 2022
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous")

    
